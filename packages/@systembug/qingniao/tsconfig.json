{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["ES2020", "DOM"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "types": ["node"],
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.test.tsx"]
}

