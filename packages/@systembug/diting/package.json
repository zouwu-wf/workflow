{
    "name": "@systembug/diting",
    "version": "1.0.1",
    "description": "谛听 - 平台中立的日志库，使用 chalk 和 pino 进行日志记录",
    "keywords": [
        "logger",
        "logging",
        "platform-neutral",
        "typescript",
        "chalk",
        "pino",
        "diting"
    ],
    "author": "Albert Li <albert_lee@hotmail.com>",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/",
        "README.md"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "vite build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/ --ext .ts",
        "format": "prettier --write src/",
        "dev": "vitest",
        "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "pino": "^9.0.0"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@vitest/coverage-v8": "^1.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "vite-plugin-dts": "^3.0.0",
        "vitest": "^1.0.0"
    },
    "engines": {
        "node": ">=16.0.0"
    }
}
