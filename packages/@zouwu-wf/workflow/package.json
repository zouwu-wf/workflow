{
  "name": "@zouwu-wf/workflow",
  "version": "0.0.2",
  "description": "驺吾工作流引擎 - 平台中立的工作流DSL和运行时",
  "keywords": [
    "workflow",
    "schema",
    "validation",
    "yaml",
    "typescript",
    "orchestration",
    "dsl"
  ],
  "author": "Albert Li <albert_lee@hotmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/",
    "schemas/",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./schemas": "./schemas/index.json",
    "./schemas/*": "./schemas/*",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --write src/ schemas/",
    "dev": "vitest",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "dependencies": {
    "@zouwu-wf/logger": "workspace:*",
    "@zouwu-wf/expression-parser": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
