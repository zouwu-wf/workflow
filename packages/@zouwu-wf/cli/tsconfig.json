{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": [
            "../../../node_modules/@types",
            "../../node_modules/@types",
            "./node_modules/@types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": ["../../../node_modules/*", "../../node_modules/*", "./node_modules/*"]
        },
        "jsx": "react-jsx"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
