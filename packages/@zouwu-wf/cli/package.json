{
    "name": "@zouwu-wf/cli",
    "version": "1.0.0",
    "description": "驺吾工作流命令行工具 - CLI工具包",
    "type": "module",
    "keywords": [
        "workflow",
        "schema",
        "cli",
        "typescript",
        "code-generation",
        "validation"
    ],
    "author": "Albert Li <albert_lee@hotmail.com>",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "zouwu": "./dist/cli.js"
    },
    "files": [
        "dist/",
        "templates/",
        "README.md"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./templates": "./templates/",
        "./templates/*": "./templates/*",
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "vite build",
        "test": "vitest",
        "test:watch": "npx jest --watch",
        "test:coverage": "npx jest --coverage",
        "compile": "tsc",
        "lint": "eslint src/ --ext .ts",
        "format": "prettier --write src/ templates/",
        "dev": "npm run compile && npm test",
        "cli": "npx tsx src/cli/index.ts",
        "prepublishOnly": "npm run lint && npm run test && npm run build"
    },
    "dependencies": {
        "@zouwu-wf/workflow": "workspace:*",
        "@types/glob": "^8.1.0",
        "chalk": "^4.1.2",
        "commander": "^9.5.0",
        "glob": "^13.0.0",
        "js-yaml": "^4.1.0",
        "json-schema-to-typescript": "^13.1.1"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^18.0.0",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint": "^8.0.0",
        "ink": "^6.6.0",
        "ink-big-text": "^2.0.0",
        "ink-gradient": "^3.0.0",
        "jest": "^29.0.0",
        "prettier": "^3.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "ts-jest": "^29.0.0",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^7.3.0",
        "vitest": "^4.0.16"
    },
    "peerDependencies": {
        "typescript": ">=4.0.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    }
}
