{
    "name": "@zouwu-wf/expression-parser",
    "version": "0.0.7",
    "description": "驺吾工作流表达式解析器 - 解析和验证 {{...}} 模板语法",
    "type": "module",
    "keywords": [
        "workflow",
        "expression",
        "parser",
        "template",
        "typescript"
    ],
    "author": "Albert Li <albert_lee@hotmail.com>",
    "license": "MIT",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/",
        "README.md"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "pnpm run generate && vite build",
        "generate": "peggy --format es --output src/generated/parser.js src/grammar.pegjs",
        "test": "pnpm run generate && vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "compile": "tsc",
        "lint": "eslint src/ --ext .ts",
        "format": "prettier --write src/",
        "dev": "vitest",
        "prepublishOnly": "npm run lint && npm run test && npm run build"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^18.0.0",
        "@vitest/coverage-v8": "^4.0.16",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "peggy": "^5.0.6",
        "prettier": "^3.7.4",
        "ts-jest": "^29.4.5",
        "ts-pegjs": "^4.2.1",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^5.4.21",
        "vite-plugin-dts": "^3.0.0",
        "vitest": "^4.0.16"
    },
    "peerDependencies": {
        "typescript": ">=4.0.0"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
