{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "out/**"]
        },
        "test": {
            "dependsOn": ["build"],
            "outputs": [],
            "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
        },
        "lint": {
            "outputs": []
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "outputs": []
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
